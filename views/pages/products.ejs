<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products | Grocerio</title>
    <link rel="stylesheet" href="main.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <script src="addProductPopup.js" defer></script>
    <script src="deletePopup.js" defer></script>
    <script src="editProductPopup.js" defer></script>
  </head>

  <body>
    <div class="wrapper">
      <%- include('../partials/navbar') %>
      <main>
        <div class="table">
          <div class="table-header">
            <h1>Your products</h1>
            <p>Hover for details</p>
          </div>
          <div class="table-content">
            <% products.forEach(function(product) { %>
            <div class="product">
              <div class="top">
                <span class="name"> <%= product.name %> <span class="small-category"> | <%= product.category_name %> </span></span>
                <span class="quantity"> <%= product.quantity %>x </span>
                <span class="price"> <%= product.price %>$ </span>
              </div>
              <div class="down">
                <span class="description"> <%= product.description %> </span>
                <button class="edit" onclick="editProductPopup(<%= JSON.stringify(product) %>, <%= JSON.stringify(categories) %>)"><span class="material-icons">edit</span></button>
                <button class="delete" onclick="deletePopup('products', '<%= product.name %>')"><span class="material-icons">delete</span></button>
              </div>
            </div>
            <% }); %>
          </div>
          <div class="table-footer">
            <button class="add" id="add-product" onClick="addProductPopup(<%= JSON.stringify(categories) %>)"><span class="material-icons">add</span></button>
          </div>
        </div>
      </main>
      <%- include('../partials/footer', { error: false }) %>
    </div>
  </body>
</html>
